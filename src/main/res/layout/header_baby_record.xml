<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90_dip"
        android:background="@color/white">
        <TextView
            android:id="@+id/pic_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="#999999"
            android:text="- 照片墙 -"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/left1"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/img1"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/left1" />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/zhongjian" />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/left1" />
        <ImageView
            android:id="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/img4"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:src="@mipmap/left1" />
    </RelativeLayout>
    <TextView
        android:id="@+id/pic_wall_hint"
        android:layout_width="match_parent"
        android:textSize="@dimen/dimen_26_dip"
        android:textColor="#999999"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_30_dip"
        android:layout_marginBottom="@dimen/dimen_30_dip"
        android:text="赶快晒晒宝宝照片吧，给你的宝宝制作个性的照片墙吧"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="@color/mengbao_index_split_line_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90_dip"
        android:background="@color/white">
        <TextView
            android:id="@+id/diary_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="#999999"
            android:text="- 日记 -"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:layout_marginRight="@dimen/dimen_30_dip"
        android:layout_marginBottom="@dimen/dimen_30_dip"
        android:background="#F4F4F4"
        android:id="@+id/add_diary"
        android:layout_height="@dimen/dimen_118_dip">
        <LinearLayout
            android:layout_width="@dimen/dimen_118_dip"
            android:layout_height="@dimen/dimen_118_dip"
            android:background="#D66263"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_45_dip"
                android:textColor="@color/white"
                android:id="@+id/diary_day_zh"
                android:text="今天"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_26_dip"
                android:textColor="#383838"
                android:id="@+id/diary_day_en"
                android:text="Today"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_26_dip"
            android:textColor="#999999"
            android:id="@+id/diary_day_hint"
            android:text="用爱每天坚持记录宝宝的成长！"
            android:layout_marginLeft="@dimen/dimen_138_dip"/>
        <ImageView
            android:layout_width="@dimen/dimen_98_dip"
            android:layout_height="@dimen/dimen_98_dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_20_dip"
            android:src="@mipmap/photo"/>
    </RelativeLayout>
</LinearLayout>