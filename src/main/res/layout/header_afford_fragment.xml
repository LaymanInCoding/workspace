<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:layout_marginBottom="@dimen/dimen_10_dip"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_320_dip">
        <com.witmoon.xmblibrary.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/auto_scroll_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.xmb.viewpagerindicator.CirclePageIndicator
            android:id="@+id/auto_scroll_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dip"
            app:fillColor="#88FF0000"
            app:pageColor="#FFF"
            app:radius="4dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/main_kin"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="全部分类"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_brands1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dimen_250_dip"
                android:src="@mipmap/pic_category_placeholder" />

            <TextView
                android:id="@+id/text_brands1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                android:gravity="center"
                android:text="奶粉"
                android:textColor="#575c65"
                android:textSize="@dimen/space_14" />
        </LinearLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/mbq_circle_search_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_brands2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dimen_250_dip"
                android:src="@mipmap/pic_category_placeholder" />

            <TextView
                android:id="@+id/text_brands2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                android:gravity="center"
                android:text="奶粉"
                android:textColor="#575c65"
                android:textSize="@dimen/space_14" />
        </LinearLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/mbq_circle_search_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_brands3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dimen_250_dip"
                android:src="@mipmap/pic_category_placeholder" />

            <TextView
                android:id="@+id/text_brands3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                android:gravity="center"
                android:text="奶粉"
                android:textColor="#575c65"
                android:textSize="@dimen/space_14" />
        </LinearLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/mbq_circle_search_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_brands4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dimen_250_dip"
                android:src="@mipmap/pic_category_placeholder" />

            <TextView
                android:id="@+id/text_brands4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                android:gravity="center"
                android:text="奶粉"
                android:textColor="#575c65"
                android:textSize="@dimen/space_14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/mbq_circle_search_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_brands5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dimen_250_dip"
                android:src="@mipmap/pic_category_placeholder" />

            <TextView
                android:id="@+id/text_brands5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                android:gravity="center"
                android:text="奶粉"
                android:textColor="#575c65"
                android:textSize="@dimen/space_14" />
        </LinearLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/mbq_circle_search_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_brands6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dimen_250_dip"
                android:src="@mipmap/pic_category_placeholder" />

            <TextView
                android:id="@+id/text_brands6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                android:gravity="center"
                android:text="奶粉"
                android:textColor="#575c65"
                android:textSize="@dimen/space_14" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent"
            android:background="@color/mbq_circle_search_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_brands7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dimen_250_dip"
                android:src="@mipmap/pic_category_placeholder" />

            <TextView
                android:id="@+id/text_brands7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                android:gravity="center"
                android:text="奶粉"
                android:textColor="#575c65"
                android:textSize="@dimen/space_14" />
        </LinearLayout>

        <View
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/mbq_circle_search_border" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_brands8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxHeight="@dimen/dimen_250_dip"
                android:src="@mipmap/pic_category_placeholder" />

            <TextView
                android:id="@+id/text_brands8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dimen_8_dip"
                android:paddingBottom="@dimen/dimen_8_dip"
                android:gravity="center"
                android:text="奶粉"
                android:textColor="#575c65"
                android:textSize="@dimen/space_14" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/main_kin"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="每日必看"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_12" />

    <ImageView
        android:id="@+id/group_img"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:maxHeight="@dimen/dimen_500_dip"
        android:adjustViewBounds="true"
        android:src="@mipmap/pic_market_placeholder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/ll_left_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:maxHeight="@dimen/dimen_500_dip"
            android:adjustViewBounds="true"
            android:src="@null" />

        <ImageView
            android:id="@+id/ll_center_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:maxHeight="@dimen/dimen_500_dip"
            android:adjustViewBounds="true"
            android:src="@null" />

        <ImageView
            android:id="@+id/ll_right_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:maxHeight="@dimen/dimen_500_dip"
            android:adjustViewBounds="true"
            android:src="@null" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/center_img_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@mipmap/pic_market_placeholder" />

        <ImageView
            android:id="@+id/center_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@mipmap/pic_market_placeholder" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottom_img_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@mipmap/pic_market_placeholder" />

        <ImageView
            android:id="@+id/bottom_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@mipmap/pic_market_placeholder" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/main_kin"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="推荐单品"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_12" />
</LinearLayout>