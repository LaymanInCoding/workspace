<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dimen_20_dip"
    android:orientation="vertical">
    <View
        style="@style/horizontal_divider"  />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dimen_16_dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户评价"
            android:textSize="@dimen/text_size_16"
            android:textColor="#606060"/>
    </LinearLayout>
    <View
        style="@style/horizontal_divider"  />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:paddingRight="@dimen/dimen_16_dip"
        android:paddingTop="@dimen/dimen_30_dip">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/comment_header_img"
            android:layout_width="37dip"
            android:layout_height="37dip"
            android:scaleType="centerCrop"
            android:src="@null"
            app:riv_oval="true"
            app:riv_border_color="#efefef"
            app:riv_border_width="0.5dip"
            app:riv_corner_radius="4dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/comment_username"
                    android:text="@null"
                    android:textColor="#606060"
                    android:textSize="@dimen/text_size_15" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/comment_date"
                    android:gravity="center_vertical|right"
                    android:text="@null"
                    android:textColor="#a9a9a9"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="#a9a9a9"
                android:text="@null"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_24_dip"
        android:id="@+id/comment_img_container1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimen_16_dip"
        android:id="@+id/comment_img_container2">
    </LinearLayout>
    <TextView
        android:id="@+id/comment_total_all"
        android:layout_marginTop="@dimen/dimen_34_dip"
        android:paddingBottom="@dimen/dimen_28_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:textColor="#D66263"
        android:gravity="center"
        android:text=""/>
    <View
        style="@style/horizontal_divider" />
</LinearLayout>