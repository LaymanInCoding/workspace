<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_20_dip"
    android:background="@color/white">
    <View
        style="@style/horizontal_divider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_94_dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shop_logo"
            android:layout_width="@dimen/dimen_73_dip"
            android:layout_height="@dimen/dimen_73_dip"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            android:src="@null"
            app:riv_corner_radius="4dip"
            app:riv_border_width="0.5dip"
            app:riv_border_color="#efefef"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_16"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_18_dip"/>
        <TextView
            android:id="@+id/order_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_15"
            android:textColor="#a9a9a9"
            android:gravity="center_vertical|right"
            android:layout_marginRight="@dimen/dimen_16_dip"/>
    </LinearLayout>
    <View
        style="@style/horizontal_divider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_216_dip"
        android:orientation="horizontal"
        android:id="@+id/container"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:paddingRight="@dimen/dimen_16_dip">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="@dimen/dimen_152_dip"
            android:layout_height="@dimen/dimen_152_dip"
            android:layout_marginTop="@dimen/dimen_33_dip"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_24_dip"
            android:layout_marginTop="@dimen/dimen_42_dip">
            <TextView
                android:id="@+id/product_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="#606060" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_18_dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:text="总价："
                    android:textColor="#606060" />
                <TextView
                    android:id="@+id/order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:text=""
                    android:textColor="#DD2727" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_16"
                    android:text="元"
                    android:textColor="#606060" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/horizontal_divider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/btn_container"
        android:layout_marginTop="@dimen/dimen_11_dip"
        android:layout_marginBottom="@dimen/dimen_11_dip"
        android:paddingRight="@dimen/dimen_16_dip">
        <Button
            android:id="@+id/order_btn"
            android:layout_width="@dimen/dimen_190_dip"
            android:layout_height="@dimen/dimen_80_dip"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:background="@drawable/bg_service_btn1"/>
    </LinearLayout>
    <View
        style="@style/horizontal_divider" />
</LinearLayout>