<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10_dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_4"
                    android:text="原订单号"
                    android:textColor="@color/button_background"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    tools:text="：201511250064"
                    android:textSize="@dimen/text_size_15"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="处理类型"
                    android:textColor="@color/button_background"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/handle_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:paddingLeft="4dp"
                    android:text="：退款"
                    android:textSize="@dimen/text_size_15"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/_gson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="退款金额"
                    android:textColor="@color/button_background"
                    android:textSize="@dimen/text_size_15"/>

                <TextView
                    android:id="@+id/return_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    tools:text="：￥30.00"
                    android:textSize="@dimen/text_size_15"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:paddingTop="@dimen/dimen_10_dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10_dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="@dimen/dimen_10_dip"
                android:text="问题描述"
                android:textColor="@color/button_background"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/question_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="@dimen/dimen_10_dip"
                tools:text="尺码发错"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:paddingTop="@dimen/dimen_10_dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_10_dip">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="@dimen/dimen_10_dip"
                android:text="售后进度"
                android:textColor="@color/button_background"
                android:textSize="@dimen/text_size_15"/>
        </LinearLayout>

        <ListView
            android:id="@+id/list_progress_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>

    <com.witmoon.xmb.ui.widget.EmptyLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.witmoon.xmb.ui.widget.EmptyLayout>
</RelativeLayout>


