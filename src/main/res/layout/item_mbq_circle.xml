<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dimen_20_dip"
    android:background="@color/white"
    android:layout_height="@dimen/dimen_111_dip">
    <RelativeLayout
        android:paddingLeft="@dimen/dimen_20_dip"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dimen_70_dip">

        <ImageView
            android:id="@+id/circle_img"
            android:layout_width="@dimen/dimen_70_dip"
            android:layout_height="@dimen/dimen_70_dip"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:src="@null"/>
        <RelativeLayout
            android:layout_toRightOf="@+id/circle_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_100_dip"
            android:orientation="vertical">
            <TextView
                android:id="@+id/circle_name"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dimen_4_dip"
                android:textSize="@dimen/dimen_26_dip"
                android:text="@null"
                android:textColor="@color/app_main_deep"/>
            <TextView
                android:id="@+id/circle_desc"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/dimen_24_dip"
                android:maxLines="1"
                android:text="@null"
                android:layout_marginTop="@dimen/dimen_6_dip"
                android:textColor="@color/app_main_thin"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/circle_join"
            android:background="@color/white"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_20_dip"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mbq_add"/>
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/dimen_20_dip"
        style="@style/mbq_horizontal_divider_full" />
</LinearLayout>