<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_marginTop="@dimen/dimen_20_dip"
        style="@style/horizontal_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:paddingRight="@dimen/dimen_16_dip">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25_dip"
            android:textColor="#606060"
            android:textSize="@dimen/text_size_16"
            android:text="退还内容"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/returning_money"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_46_dip"
            android:textColor="#a9a9a9"
            android:layout_marginBottom="@dimen/dimen_26_dip"
            android:textSize="@dimen/text_size_15"
            android:text="现金： 0.0元"/>
    </LinearLayout>

    <View
        style="@style/horizontal_divider"/>

    <View
        android:layout_marginTop="@dimen/dimen_20_dip"
        style="@style/horizontal_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:paddingRight="@dimen/dimen_16_dip">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25_dip"
            android:textColor="#606060"
            android:textSize="@dimen/text_size_16"
            android:text="现金退还方式"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_46_dip"
            android:textColor="#a9a9a9"
            android:layout_marginBottom="@dimen/dimen_26_dip"
            android:textSize="@dimen/text_size_15"
            android:text="原路返回（1-3个工作日内退款到原支付方）"/>
    </LinearLayout>

    <View
        style="@style/horizontal_divider"/>

    <View
        android:layout_marginTop="@dimen/dimen_20_dip"
        style="@style/horizontal_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_25_dip"
            android:layout_marginBottom="@dimen/dimen_25_dip"
            android:textColor="#606060"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            android:textSize="@dimen/text_size_16"
            android:text="退款原因（至少选一项）"/>
        <View
            style="@style/horizontal_divider"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:text="预约不上"
            android:id="@+id/reason1"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>
        <TextView
            android:id="@+id/reason2"
            android:text="商家营业但不接待"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>
        <TextView
            android:id="@+id/reason3"
            android:text="商家营业 / 装修 / 装让"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>
        <TextView
            android:id="@+id/reason4"
            android:text="去过了，不太满意"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>
        <TextView
            android:id="@+id/reason5"
            android:text="朋友，网上评价不好"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>
        <TextView
            android:id="@+id/reason6"
            android:text="买多了 / 买错了"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>

        <TextView
            android:id="@+id/reason7"
            android:text="计划有变 / 没时间消费"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>

        <TextView
            android:id="@+id/reason8"
            android:text="后悔了，不想要了"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>
        <TextView
            android:id="@+id/reason9"
            android:text="商家说可以直接团购价到店消费"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>

        <TextView
            android:id="@+id/reason10"
            android:text="联系不上商家"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_14"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimen_80_dip"
            android:paddingLeft="@dimen/dimen_16_dip"
            android:paddingRight="@dimen/dimen_16_dip"
            />

        <View
            style="@style/horizontal_divider"/>
    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:text="申请退款"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginLeft="@dimen/dimen_24_dip"
        android:layout_marginRight="@dimen/dimen_24_dip"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/bg_service_btn1"
        />
</LinearLayout>