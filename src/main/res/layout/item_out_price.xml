<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/no_split"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_54_dip"
            android:background="@color/button_background"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <TextView
                android:id="@+id/split_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.03.14 13:23"
                android:textSize="@dimen/dimen_22_dip"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/serial_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="订单号：201503150058"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dimen_26_dip"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/goods_od"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_11"
                android:text="已完成"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_toRightOf="@id/serial_no"
                android:visibility="gone"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/split_order_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_8_dip"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="@dimen/dimen_8_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_total"/>

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1234"
                android:textColor="@color/text_price"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进度查询"
                android:layout_gravity="center"
                android:background="@drawable/bg_text"
                android:paddingTop="@dimen/dimen_6_dip"
                android:paddingBottom="@dimen/dimen_6_dip"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/type2"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请售后"
                android:background="@drawable/bg_text"
                android:paddingTop="@dimen/dimen_6_dip"
                android:paddingBottom="@dimen/dimen_6_dip"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                android:background="@drawable/bg_rounded_green_border"
                android:paddingTop="@dimen/dimen_6_dip"
                android:paddingBottom="@dimen/dimen_6_dip"
                android:paddingLeft="@dimen/dimen_15_dip"
                android:paddingRight="@dimen/dimen_15_dip"
                android:text="去付款"
                android:visibility="gone"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/horizontal_divider"/>
</LinearLayout>