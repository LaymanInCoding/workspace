<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dimen_174_dip"
    android:paddingRight="@dimen/dimen_20_dip"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/g_img"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/dimen_174_dip"
        android:layout_height="@dimen/dimen_174_dip" />
    <TextView
        android:id="@+id/g_name"
        android:layout_width="@dimen/dimen_174_dip"
        android:textColor="#4d4d4d"
        android:maxLines="2"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dimen_12_dip"
        android:textSize="@dimen/dimen_24_dip"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/g_price"
        android:textColor="#d66263"
        android:textAlignment="center"
        android:layout_width="@dimen/dimen_174_dip"
        android:layout_marginTop="@dimen/dimen_15_dip"
        android:textSize="@dimen/dimen_24_dip"
        android:layout_height="@dimen/dimen_50_dip" />
</LinearLayout>