<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_285_dip"
            android:paddingRight="@dimen/dimen_30_dip"
            android:paddingTop="@dimen/dimen_30_dip"
            android:paddingBottom="@dimen/dimen_30_dip"
            android:background="@color/white">
            <ImageView
                android:layout_marginTop="@dimen/dimen_15_dip"
                android:layout_width="@dimen/dimen_40_dip"
                android:layout_height="@dimen/dimen_40_dip"
                android:background="#EAA3A7"/>
            <TextView
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_marginLeft="@dimen/dimen_60_dip"
                android:lines="1"
                android:ellipsize="middle"
                android:layout_marginRight="@dimen/dimen_322_dip"
                android:textSize="@dimen/dimen_30_dip"
                android:textColor="@color/app_main_deep"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_64_dip"
                android:layout_marginLeft="@dimen/dimen_60_dip"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/dimen_342_dip"
                android:textSize="@dimen/dimen_24_dip"
                android:textColor="@color/app_main_thin"
                android:id="@+id/post_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:id="@+id/post_img"
                android:layout_width="@dimen/dimen_292_dip"
                android:layout_height="@dimen/dimen_225_dip" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_60_dip"
                android:layout_marginRight="@dimen/dimen_322_dip"
                android:layout_marginBottom="@dimen/dimen_20_dip"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:src="@mipmap/xiaicon1"
                    android:layout_width="@dimen/dimen_30_dip"
                    android:layout_height="@dimen/dimen_25_dip" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_22_dip"
                    android:textColor="#999999"
                    android:layout_marginLeft="@dimen/dimen_50_dip"
                    android:id="@+id/post_view_cnt"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_30_dip"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/xiaicon2"
                        android:layout_width="@dimen/dimen_30_dip"
                        android:layout_height="@dimen/dimen_25_dip" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_22_dip"
                        android:textColor="#999999"
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:id="@+id/post_reply_cnt"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="@color/mengbao_index_split_line_color"/>
</LinearLayout>