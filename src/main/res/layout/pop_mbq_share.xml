<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#e8e7e6"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_25_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:textSize="@dimen/dimen_24_dip"
        android:textColor="@color/mbq_circle_title"
        android:text="分享到"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/share_weixin_friend"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weixin_friend"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mbq_circle_title"
                android:textSize="@dimen/dimen_20_dip"
                android:text="微信好友"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share_weixin_circle"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/weixin_circle"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="@color/mbq_circle_title"
                android:text="朋友圈"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share_qzone"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qzone"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="@color/mbq_circle_title"
                android:text="QQ空间"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/share_weibo"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sina_weibo"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="@color/mbq_circle_title"
                android:text="新浪微博"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dimen_20_dip"
        style="@style/mbq_horizontal_divider_full_share" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="@color/mbq_circle_title"
            android:text="取消"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>