<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dimen_20_dip">
    <RelativeLayout
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70_dip">
        <ImageView
            android:id="@+id/user_head_img"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dimen_70_dip"
            android:layout_height="@dimen/dimen_70_dip" />
        <TextView
            android:id="@+id/user_name"
            android:textSize="@dimen/dimen_20_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:text="@null"
            android:textColor="@color/mbq_circle_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/user_head_img"/>
        <TextView
            android:id="@+id/circle_name"
            android:textSize="@dimen/dimen_20_dip"
            android:text="@null"
            android:textColor="@color/mbq_circle_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/circle_post_title"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/dimen_10_dip"
        android:maxLines="2"
        android:textSize="@dimen/dimen_26_dip"
        android:textStyle="bold"
        android:text="@null"
        android:textColor="@color/mbq_circle_hot_post_title"/>
    <TextView
        android:id="@+id/circle_post_desc"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:lineSpacingExtra="@dimen/dimen_10_dip"
        android:textSize="@dimen/dimen_26_dip"
        android:text="@null"
        android:textColor="@color/mbq_circle_hot_post_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_20_dip"
        android:paddingRight="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:id="@+id/post_img_container"
        android:orientation="horizontal">
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dimen_20_dip"
        style="@style/mbq_horizontal_divider_full" />
</LinearLayout>