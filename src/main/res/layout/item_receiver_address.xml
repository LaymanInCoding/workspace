<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/address_parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text=""
                    android:textColor="@color/black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textSize="12sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F3F3F3"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <CheckedTextView
                android:id="@+id/set_default"
                style="@style/leftIconButtonTextView"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/list_choice_indicator_single"
                android:text="设为默认"
                android:textColor="@color/master_me"/>

            <TextView
                android:id="@+id/delete"
                style="@style/leftIconButtonTextView"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="6dp"
                android:drawableLeft="@mipmap/address_delete_new"
                android:paddingBottom="@dimen/space_2"
                android:paddingLeft="@dimen/space_4"
                android:paddingRight="@dimen/space_4"
                android:paddingTop="@dimen/space_2"
                android:text="@string/text_delete"/>

            <TextView
                android:id="@+id/edit"
                style="@style/leftIconButtonTextView"
                android:layout_toLeftOf="@id/delete"
                android:drawableLeft="@mipmap/address_edit_new"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/space_2"
                android:paddingLeft="@dimen/space_4"
                android:paddingRight="@dimen/space_4"
                android:paddingTop="@dimen/space_2"
                android:text="@string/text_edit"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
