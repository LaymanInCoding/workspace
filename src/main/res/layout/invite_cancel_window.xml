<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_text"
            android:layout_width="@dimen/dimen_516_dip"
            android:layout_height="@dimen/dimen_122_dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_invite_cancel_top"
            android:gravity="center"
            android:text="@string/cancel_share_text"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_38_dip"/>

        <TextView
            android:id="@+id/bottom_text"
            android:layout_width="@dimen/dimen_516_dip"
            android:layout_height="@dimen/dimen_90_dip"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_invite_cancel_bottom"
            android:gravity="center"
            android:text="@string/text_confirm"
            android:textColor="#ffffff"
            android:textSize="@dimen/dimen_38_dip"/>
    </LinearLayout>
</RelativeLayout>