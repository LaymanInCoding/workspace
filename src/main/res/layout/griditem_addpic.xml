<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="@dimen/dimen_150_dip"
        android:layout_height="@dimen/dimen_150_dip">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dimen_150_dip"
            android:layout_height="@dimen/dimen_150_dip"
            android:layout_marginRight="@dimen/space_6"
            app:fadeDuration="300"
            app:placeholderImage="@mipmap/mbq_post_add"
            app:roundingBorderColor="@color/circle_image_border"
            app:roundingBorderWidth="2dip"/>
    </RelativeLayout>
</LinearLayout>