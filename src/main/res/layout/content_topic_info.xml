<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.witmoon.xmb.activity.mabao.TopicInfo"
    tools:showIn="@layout/activity_topic_info">

    <include layout="@layout/item_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/default_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="综合"
                    android:textColor="#c86a66"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerInParent="true" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true" />
                <View
                    android:id="@+id/view1"
                    android:layout_width="@dimen/dimen_66_dip"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="#c86a66"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/salesnum_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="销量"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerInParent="true" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true" />
                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/dimen_66_dip"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:background="#c86a66"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/new_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="最新"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerInParent="true" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true" />
                <View
                    android:id="@+id/view3"
                    android:layout_width="@dimen/dimen_66_dip"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:background="#c86a66"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/stock_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="只看有货"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_14"
                    android:layout_centerInParent="true" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_alignParentBottom="true" />
                <View
                    android:id="@+id/view4"
                    android:layout_width="@dimen/dimen_132_dip"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"
                    android:background="#c86a66"/>
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_marginTop="40dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


</LinearLayout>
