<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10_dip"
        android:background="@color/mengbao_index_split_bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90_dip"
        android:background="@color/white">
        <TextView
            android:id="@+id/mb_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="@color/app_main_deep"
            android:text="- 工具 -"/>

        <TextView
            android:id="@+id/add_tools2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="#999999"
            android:text="添加>"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="@color/mengbao_index_split_line_color"/>
    <LinearLayout
        android:id="@+id/tools_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:id="@+id/add_tools"
        android:background="@color/white"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_tool"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_main_deep"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:textSize="@dimen/dimen_28_dip"
            android:text="添加更多工具"/>
    </LinearLayout>
</LinearLayout>