<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_320_dip">

        <com.witmoon.xmblibrary.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/auto_scroll_pagers"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.xmb.viewpagerindicator.CirclePageIndicator
            android:id="@+id/auto_scroll_indicators"
            app:fillColor="#88FF0000"
            app:pageColor="#FFF"
            app:radius="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dip" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/main_kin"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="麻包推荐"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_12" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/add_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

