<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dimen_10_dip">
    <TextView
        android:id="@+id/post_title"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_26_dip"
        android:textStyle="bold"
        android:lineSpacingExtra="@dimen/dimen_10_dip"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginLeft="@dimen/dimen_28_dip"
        android:layout_marginRight="@dimen/dimen_28_dip"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/mbq_post_bottom"/>
    <TextView
        android:id="@+id/post_desc"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_28_dip"
        android:layout_marginLeft="@dimen/dimen_28_dip"
        android:layout_marginRight="@dimen/dimen_28_dip"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dimen_10_dip"
        android:maxLines="3"
        android:textColor="@color/mbq_post_bottom"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dimen_28_dip"
        android:paddingRight="@dimen/dimen_28_dip"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:id="@+id/post_img_container"
        android:orientation="horizontal">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50_dip"
        android:paddingLeft="@dimen/dimen_28_dip"
        android:background="@color/white"
        android:paddingRight="@dimen/dimen_28_dip">
        <ImageView
            android:id="@+id/sex_head"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sex_head"/>
        <TextView
            android:id="@+id/user_name"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dimen_3_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sex_head"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_20_dip"
            android:textColor="@color/mbq_post_bottom"/>
        <TextView
            android:id="@+id/post_comment_total"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="@color/mbq_post_bottom"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="@dimen/dimen_17_dip"
            android:layout_height="@dimen/dimen_17_dip"
            android:layout_marginRight="@dimen/dimen_3_dip"
            android:layout_toLeftOf="@+id/post_comment_total"
            android:src="@mipmap/post_message"
            android:background="@color/white"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/post_time"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:textColor="@color/mbq_post_bottom"
            android:layout_toLeftOf="@+id/post_comment_total"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <View
        style="@style/mbq_horizontal_divider_full" />
</LinearLayout>