<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/share_container"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar_right" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3f3f3">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dimen_20_dip"
                android:paddingRight="@dimen/dimen_22_dip"
                android:paddingBottom="@dimen/dimen_20_dip">
                <TextView
                    android:paddingLeft="@dimen/dimen_12_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="【本期问题】"
                    android:textSize="@dimen/dimen_30_dip"/>
                <TextView
                    android:id="@+id/abstract_text"
                    android:paddingLeft="@dimen/dimen_22_dip"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen_20_dip"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dimen_6_dip"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_24_dip"/>
                <ImageView
                    android:layout_marginTop="@dimen/dimen_20_dip"
                    android:layout_marginLeft="@dimen/dimen_22_dip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1_dip"
                    android:background="#cccccc"/>
                <TextView
                    android:layout_marginTop="@dimen/dimen_20_dip"
                    android:paddingLeft="@dimen/dimen_12_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:text="【本期嘉宾】"
                    android:textSize="@dimen/dimen_30_dip"/>
                <ImageView
                    android:id="@+id/voice_img"
                    android:layout_marginLeft="@dimen/dimen_22_dip"
                    android:layout_marginTop="@dimen/dimen_20_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:paddingLeft="@dimen/dimen_22_dip"
                    android:layout_marginTop="@dimen/dimen_20_dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_24_dip"
                        android:textColor="#333333"/>
                    <TextView
                        android:id="@+id/author_title"
                        android:layout_marginLeft="@dimen/dimen_20_dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_24_dip"
                        android:textColor="#333333"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/author_desc"
                    android:paddingLeft="@dimen/dimen_22_dip"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen_20_dip"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/dimen_6_dip"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_24_dip"/>
                <RelativeLayout
                    android:paddingLeft="@dimen/dimen_22_dip"
                    android:paddingRight="@dimen/dimen_22_dip"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dimen_20_dip"
                    android:layout_marginLeft="@dimen/dimen_18_dip"
                    android:layout_height="@dimen/dimen_100_dip">
                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/head_img"
                        android:layout_width="@dimen/dimen_100_dip"
                        android:layout_height="@dimen/dimen_100_dip"
                        app:riv_corner_radius="@dimen/dimen_50_dip"
                        app:riv_border_width="0.5dip"
                        app:riv_border_color="#efefef"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/voice_file"
                        android:layout_marginTop="@dimen/dimen_5_dip"
                        android:layout_marginLeft="@dimen/dimen_50_dip"
                        android:src="@mipmap/qipao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/head_img"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <include layout="@layout/emptylayout_all" />
    </RelativeLayout>
</LinearLayout>