<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <FrameLayout
        android:id="@+id/flMaskLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_170_dip"
            android:orientation="vertical"
            android:background="@drawable/bg_pupo_button">

            <TextView
                android:id="@+id/tvTakeHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70_dip"
                android:gravity="center"
                android:text="确定要删除此条记录吗？"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/translucencegray" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100_dip"
                android:layout_below="@id/tvTakeHeader"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="删除"
                android:textSize="@dimen/text_size_16"
                android:textColor="#5084FE" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_100_dip"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:background="@drawable/bg_pupo_button"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/text_size_16"
            android:layout_marginBottom="@dimen/space_10"
            android:textColor="#5084FE" />
    </LinearLayout>
</RelativeLayout>