<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/brand_logo"
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:layout_marginLeft="@dimen/dimen_40_dip"
                android:layout_marginTop="@dimen/dimen_30_dip"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>

            <View
                android:layout_marginBottom="@dimen/dimen_5_dip"
                android:layout_centerInParent="true"
                android:id="@+id/divider"
                android:layout_width="@dimen/dimen_2_dip"
                android:layout_height="@dimen/dimen_50_dip"
                android:layout_marginLeft="@dimen/dimen_36_dip"
                android:layout_toRightOf="@id/brand_logo"
                android:background="#bbbbbb"/>

            <TextView
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/dimen_10_dip"
                android:id="@+id/brand_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_36_dip"
                android:layout_toRightOf="@id/divider"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_26_dip"
                tools:text="懋隆珠宝"/>

        </RelativeLayout>

        <TextView
            android:paddingBottom="@dimen/dimen_10_dip"
            android:id="@+id/brand_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:textColor="#777777"
            android:textSize="@dimen/dimen_24_dip"
            tools:text="asdasdddddddddddddddddasddddddddddddddddddddddddasdasdasdasdasddddddddddddddddddddd"/>

</LinearLayout>