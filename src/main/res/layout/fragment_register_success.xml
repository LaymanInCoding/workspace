<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/register_success_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="45dp"
        android:src="@mipmap/register_success_phone"/>

    <TextView
        android:id="@+id/register_success_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678901"
        android:textColor="@color/red"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/register_success_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_phone_register_success"
        android:textColor="@color/text_view_hint"
        android:layout_marginTop="8dp"
        android:textSize="18dp"/>

    <!--
    <Button
        android:id="@+id/register_bind_email_btn"
        style="@style/commonButton"
        android:layout_marginTop="48dp"
        android:text="@string/text_bind_email"/>
    -->
    <Button
        android:id="@+id/register_finish"
        style="@style/commonButton"
        android:layout_marginTop="12dp"
        android:text="@string/text_finish"/>
</LinearLayout>