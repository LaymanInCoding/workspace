<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10_dip"
        android:background="@color/mengbao_index_split_bg_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:paddingBottom="@dimen/dimen_30_dip"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mb_remind_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="#999999"
            android:text="- 精品推荐 -"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="@color/mengbao_index_split_line_color"/>
    <LinearLayout
        android:id="@+id/goods_container1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:background="@color/white"
        android:gravity="center">
        <ImageView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/topic_img_01"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="@dimen/dimen_2_dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:id="@+id/topic_img_02"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2_dip" />
    <LinearLayout
        android:id="@+id/goods_container2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:background="@color/white"
        android:gravity="center">
        <ImageView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:id="@+id/goods_img_01"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="@dimen/dimen_2_dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/goods_img_02"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="@dimen/dimen_2_dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/goods_img_03"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="@dimen/dimen_2_dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/goods_img_04"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/goods_container_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:background="@color/white"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dimen_4_dip"
            android:paddingRight="@dimen/dimen_4_dip"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goods_name1"
                android:maxLines="2"
                android:ellipsize="middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_24_dip"
                android:textColor="#999999"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_24_dip">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/shop_price1"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_18_dip"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_price"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_10_dip"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/market_price1"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_16_dip"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dimen_4_dip"
            android:paddingRight="@dimen/dimen_4_dip"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goods_name2"
                android:maxLines="2"
                android:ellipsize="middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_24_dip"
                android:textColor="#999999"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_24_dip">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/shop_price2"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_18_dip"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_price"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_10_dip"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/market_price2"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_16_dip"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dimen_4_dip"
            android:paddingRight="@dimen/dimen_4_dip"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goods_name3"
                android:maxLines="2"
                android:ellipsize="middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_24_dip"
                android:textColor="#999999"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_24_dip">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/shop_price3"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_18_dip"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_price"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_10_dip"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/market_price3"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_16_dip"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dimen_4_dip"
            android:paddingRight="@dimen/dimen_4_dip"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goods_name4"
                android:maxLines="2"
                android:ellipsize="middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_24_dip"
                android:textColor="#999999"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:layout_height="@dimen/dimen_24_dip">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/shop_price4"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_18_dip"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_price"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dimen_10_dip"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/market_price4"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/dimen_16_dip"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_30_dip"
        android:id="@+id/jump_to_shop"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiajiao2"/>
    </LinearLayout>
</LinearLayout>