<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f3f3"
    android:paddingBottom="@dimen/dimen_10_dip">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dimen_26_dip"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:paddingLeft="@dimen/dimen_22_dip"
            android:paddingRight="@dimen/dimen_22_dip"
            android:id="@+id/abstract_text"
            android:lineSpacingExtra="@dimen/dimen_7_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_24_dip"
            android:textColor="#666666"
            android:maxLines="3"/>
        <TextView
            android:paddingLeft="@dimen/dimen_22_dip"
            android:paddingRight="@dimen/dimen_22_dip"
            android:id="@+id/author_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:textSize="@dimen/dimen_22_dip"/>
        <RelativeLayout
            android:paddingLeft="@dimen/dimen_22_dip"
            android:paddingRight="@dimen/dimen_22_dip"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:layout_marginLeft="@dimen/dimen_18_dip"
            android:layout_height="@dimen/dimen_100_dip">
            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/head_img"
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_100_dip"
                app:riv_corner_radius="@dimen/dimen_50_dip"
                app:riv_border_width="0.5dip"
                app:riv_border_color="#efefef"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/voice_img"
                android:layout_marginTop="@dimen/dimen_5_dip"
                android:layout_marginLeft="@dimen/dimen_50_dip"
                android:src="@mipmap/qipao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/head_img"/>
            <TextView
                android:id="@+id/click_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_22_dip"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="#b4b4b4"
            android:paddingBottom="@dimen/dimen_24_dip"/>
    </LinearLayout>
</LinearLayout>