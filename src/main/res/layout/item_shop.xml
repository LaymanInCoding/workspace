<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/item_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dimen_26_dip"
        android:paddingRight="@dimen/dimen_26_dip"
        android:paddingTop="@dimen/dimen_24_dip">

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shop_logo"
            android:layout_width="@dimen/dimen_122_dip"
            android:layout_height="@dimen/dimen_122_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_marginTop="@dimen/dimen_24_dip"
            android:scaleType="centerCrop"
            android:src="@null"
            app:riv_border_color="#efefef"
            app:riv_border_width="0.5dip"
            app:riv_corner_radius="4dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/shop_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textColor="#444444"
                android:textSize="@dimen/dimen_32_dip"/>

            <TextView
                android:id="@+id/shop_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:lineSpacingExtra="@dimen/dimen_6_dip"
                android:text="@null"
                android:textColor="@color/app_main_thin"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18_dip">

                <TextView
                    android:id="@+id/shop_nearby_subway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/ditie"
                    android:drawablePadding="@dimen/space_4"
                    android:text="@null"
                    android:textColor="@color/app_main_thin"
                    android:textSize="@dimen/text_size_13"/>

                <TextView
                    android:id="@+id/shop_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/service_city_location"
                    android:drawablePadding="@dimen/space_4"
                    android:text="@null"
                    android:textColor="#666666"
                    android:textSize="@dimen/dimen_22_dip"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:layout_marginLeft="@dimen/dimen_26_dip"
        android:background="#dddddd"/>

    <LinearLayout
        android:id="@+id/product_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_15_dip">
    </LinearLayout>

    <TextView
        android:id="@+id/product_no_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_28_dip"
        android:layout_marginTop="@dimen/dimen_28_dip"
        android:gravity="center"
        android:text="暂无更多服务"
        android:textColor="#D66263"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/product_total_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_24_dip"
        android:paddingTop="@dimen/dimen_24_dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_total_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#D66263"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:id="@+id/num_img"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/down_img"/>
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10_dip"
        android:layout_alignParentBottom="true"
        android:background="#f3f3f3"/>
</LinearLayout>
