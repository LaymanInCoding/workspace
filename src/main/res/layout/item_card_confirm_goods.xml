<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_168_dip"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.makeramen.roundedimageview.RoundedImageView
        app:riv_border_color="#cccccc"
        app:riv_border_width="@dimen/dimen_1_dip"
        app:riv_corner_radius="@dimen/dimen_4_dip"
        android:layout_marginLeft="@dimen/dimen_36_dip"
        android:layout_centerVertical="true"
        android:id="@+id/goods_img"
        android:src="@mipmap/item_card_pic"
        android:layout_width="@dimen/dimen_144_dip"
        android:layout_height="@dimen/dimen_144_dip"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dimen_36_dip"
        android:layout_toRightOf="@id/goods_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="@dimen/dimen_26_dip"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/dimen_12_dip"
            android:id="@+id/card_name"
            android:textColor="#555555"
            tools:text="麻包卡500元面值（电子卡）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/card_money"
            android:paddingBottom="@dimen/dimen_26_dip"
            android:layout_alignParentBottom="true"
            android:textColor="#999999"
            tools:text="500.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            tools:text="asdasd"
            android:id="@+id/card_num"
            android:textColor="#999999"
            android:layout_marginRight="@dimen/dimen_36_dip"
            android:paddingBottom="@dimen/dimen_26_dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View style="@style/horizontal_divider_full"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>