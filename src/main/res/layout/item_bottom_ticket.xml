<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/return_container"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/dimen_16_dip"
        android:layout_height="@dimen/dimen_94_dip">
        <Button
            android:layout_width="@dimen/dimen_190_dip"
            android:layout_height="@dimen/dimen_72_dip"
            android:textColor="@color/white"
            android:id="@+id/return_btn"
            android:textSize="@dimen/text_size_16"
            android:text="申请退款"
            android:background="@drawable/bg_service_btn1"/>
    </LinearLayout>
    <View
        style="@style/horizontal_divider"/>

    <View
        android:layout_marginTop="@dimen/dimen_20_dip"
        style="@style/horizontal_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16_dip">
        <TextView
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_height="@dimen/dimen_80_dip"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_15"
            android:text="商家信息" />
        <View
            style="@style/horizontal_divider"/>
        <TextView
            android:id="@+id/shop_name"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_28_dip"
            android:textSize="@dimen/text_size_16"
            android:text="" />
        <TextView
            android:paddingRight="@dimen/dimen_16_dip"
            android:id="@+id/shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:textSize="@dimen/text_size_14"
            android:text="" />
        <TextView
            android:id="@+id/shop_phone"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_28_dip"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:textSize="@dimen/text_size_14"
            android:text="" />
    </LinearLayout>
    <View
        style="@style/horizontal_divider"/>

    <View
        android:layout_marginTop="@dimen/dimen_20_dip"
        style="@style/horizontal_divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16_dip">
        <TextView
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_height="@dimen/dimen_80_dip"
            android:textColor="#606060"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_15"
            android:text="订单详情" />
        <View
            style="@style/horizontal_divider"/>
        <TextView
            android:id="@+id/product_sn"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_28_dip"
            android:textSize="@dimen/text_size_16"
            android:text="" />
        <TextView
            android:paddingRight="@dimen/dimen_16_dip"
            android:id="@+id/order_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:textSize="@dimen/text_size_14"
            android:text="" />
        <TextView
            android:id="@+id/pay_time"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:textSize="@dimen/text_size_14"
            android:text="" />
        <TextView
            android:id="@+id/product_num"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:textSize="@dimen/text_size_14"
            android:text="" />
        <TextView
            android:id="@+id/surplus"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:textSize="@dimen/text_size_14"
            android:text="" />
        <TextView
            android:id="@+id/order_amount"
            android:paddingRight="@dimen/dimen_16_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_28_dip"
            android:textColor="#a9a9a9"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:textSize="@dimen/text_size_14"
            android:text="" />
    </LinearLayout>
    <View
        style="@style/horizontal_divider"/>
</LinearLayout>