<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10_dip"
        android:background="@color/mengbao_index_split_bg_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/white"
        android:paddingBottom="@dimen/dimen_30_dip"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mb_remind_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="#999999"
            android:text="- 麻包圈推荐 -"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="@color/mengbao_index_split_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mb_posts_container"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_30_dip"
        android:id="@+id/jump_to_circle"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiajiao1"/>
    </LinearLayout>

</LinearLayout>