<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:padding="@dimen/dimen_40_dip">
        <TextView
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="#717173"
            android:text="宝宝昵称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_40_dip"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bbnc" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:background="@null"
                android:id="@+id/baby_nickname"
                android:hint="请输入宝贝昵称"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:textSize="@dimen/dimen_30_dip"
                android:textColor="#999999"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="#eaeaea"/>
        <TextView
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="#717173"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:text="宝宝生日"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_40_dip"
            android:id="@+id/baby_rili_container"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rili" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:id="@+id/baby_rili"
                android:layout_marginLeft="@dimen/dimen_20_dip"
                android:textSize="@dimen/dimen_30_dip"
                android:gravity="center_vertical"
                android:textColor="#999999"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="#eaeaea"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_40_dip"
            android:gravity="center">
            <Button
                android:layout_width="160dip"
                android:layout_height="40dip"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/save_status"
                android:background="@drawable/babycenter_button_bg"
                android:text="保    存"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/emptylayout_all" />
</RelativeLayout>
