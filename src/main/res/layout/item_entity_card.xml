<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_500_dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_366_dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic_goods_placeholder"/>

        <TextView
            android:gravity="left|center_horizontal"
            tools:text="asdaaaaaaaaaaaaaaaaaaaaaaaaasdddddddddddddddddddddddads"
            android:id="@+id/card_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_pic"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/dimen_8_dip"
            android:paddingRight="@dimen/dimen_8_dip"
            android:paddingTop="@dimen/dimen_8_dip"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_26_dip"/>

        <TextView
            android:id="@+id/card_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dimen_8_dip"
            android:textColor="#e8465e"
            android:textSize="@dimen/dimen_28_dip"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>