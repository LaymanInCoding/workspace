<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_18_dip">

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shop_logo"
            android:layout_width="@dimen/dimen_104_dip"
            android:layout_height="@dimen/dimen_104_dip"
            android:layout_marginLeft="@dimen/dimen_16_dip"
            android:layout_marginTop="@dimen/dimen_18_dip"
            android:scaleType="centerCrop"
            android:src="@null"
            app:riv_border_color="#efefef"
            app:riv_border_width="0.5dip"
            app:riv_corner_radius="4dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_23_dip"
            android:layout_marginTop="@dimen/dimen_28_dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#606060"
                android:id="@+id/shop_name"
                android:textSize="@dimen/text_size_16" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_24_dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地址："
                    android:textColor="#606060"
                    android:textSize="@dimen/text_size_14" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/shop_address"
                    android:textColor="#606060"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontal_divider"/>
</LinearLayout>