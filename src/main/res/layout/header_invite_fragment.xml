<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_6_dip"
            android:weightSum="4">

            <RelativeLayout
                android:id="@+id/share_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_wechat"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_wecircle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_wxcricle"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_qq"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_qqzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_qzone"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rules_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_40_dip"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen_18_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="查看详细规则"
                android:textColor="#555555"
                android:textSize="@dimen/dimen_24_dip"/>

            <ImageView
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/img_double_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20_dip"
            android:background="#f3f3f3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_22_dip"
            android:layout_marginTop="@dimen/dimen_22_dip"
            android:text="奖励领取流程"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_28_dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="#e6e6e6"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24_dip"
            android:scaleType="fitCenter"
            android:paddingBottom="@dimen/dimen_22_dip"
            android:src="@mipmap/img_price_process"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20_dip"
            android:background="#f3f3f3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_22_dip"
            android:layout_marginTop="@dimen/dimen_22_dip"
            android:text="邀请成功记录"
            android:textColor="#555555"
            android:textSize="@dimen/dimen_28_dip"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="#e6e6e6"/>

        <LinearLayout
            android:id="@+id/no_coupon_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_80_dip"
                android:paddingBottom="@dimen/dimen_10_dip"
                android:paddingTop="@dimen/dimen_30_dip"
                android:scaleType="fitCenter"
                android:src="@mipmap/no_record_img"
                android:visibility="visible"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/dimen_14_dip"
                android:src="@mipmap/end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>