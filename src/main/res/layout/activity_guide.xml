<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <com.xmb.viewpagerindicator.LinePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_12"
        app:strokeWidth="2dp"
        app:unselectedColor="@color/semitransparent_dark"/>

    <ImageView
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_100_dip"
        android:layout_above="@id/indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:src="@mipmap/lanch5"
        android:visibility="gone"/>
</RelativeLayout>
