<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/trans"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dimen_405_dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_mbq_message"
        android:orientation="vertical">
        <TextView
            android:id="@+id/message"
            android:gravity="center"
            android:layout_width="@dimen/dimen_405_dip"
            android:layout_height="@dimen/dimen_80_dip"
            android:textSize="@dimen/dimen_26_dip"
            android:textColor="#575c65">
        </TextView>
        <View
            style="@style/mbq_horizontal_divider_full" />
        <LinearLayout
            android:layout_width="@dimen/dimen_405_dip"
            android:layout_height="@dimen/dimen_80_dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/cancel"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#575c65"
                android:text="取  消"
                android:textSize="@dimen/dimen_26_dip"/>
            <View
                style="@style/mbq_vertical_divider_full_divider_ful_white" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:id="@+id/confirm"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#d66263"
                android:text="加入圈子"
                android:textSize="@dimen/dimen_26_dip"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>