<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="@dimen/dimen_24_dip"
    android:orientation="vertical"
    android:layout_width="@dimen/dimen_136_dip"
    android:gravity="center"
    android:paddingBottom="@dimen/dimen_30_dip"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/more_text"
        android:layout_marginTop="@dimen/dimen_100_dip"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看更多"
        android:layout_above="@+id/more_btn"
        android:textColor="#4d4d4d"
        android:textSize="@dimen/dimen_22_dip"/>
    <TextView
        android:id="@+id/more_btn"
        android:gravity="center"
        android:layout_width="@dimen/dimen_112_dip"
        android:layout_height="@dimen/dimen_68_dip"
        android:background="@drawable/bg_rounded_more_selected"
        android:textColor="@color/white"
        android:text="GO"
        android:textSize="@dimen/dimen_30_dip"/>
</LinearLayout>