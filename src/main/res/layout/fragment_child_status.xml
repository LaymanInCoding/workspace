<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/status1_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6E6"
        android:visibility="visible">

        <TextView
            android:id="@+id/top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/dimen_20_dip"
            android:paddingLeft="@dimen/dimen_250_dip"
            android:paddingRight="@dimen/dimen_250_dip"
            android:paddingTop="@dimen/dimen_20_dip"
            android:text="@string/tip_message_gender"
            android:textColor="@color/app_main_thin"/>

        <RelativeLayout
            android:id="@+id/girl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120_dip"
            android:layout_below="@id/top_text"
            android:background="@color/white">

            <ImageView
                android:id="@+id/preg_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_16_dip"
                android:scaleType="centerCrop"
                android:src="@mipmap/baby_girl"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/preg_pic"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5_dip"
                    android:text="小公主"
                    android:textColor="@color/app_main_deep"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5_dip"
                    android:text="@string/baby_girl_message"
                    android:textColor="@color/app_main_thin"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:padding="@dimen/dimen_16_dip"
                android:scaleType="centerCrop"
                android:src="@mipmap/jiantou"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/boy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_120_dip"
            android:layout_below="@id/girl"
            android:layout_marginTop="@dimen/dimen_1_dip"
            android:background="@color/white">

            <ImageView
                android:id="@+id/born_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_16_dip"
                android:scaleType="centerCrop"
                android:src="@mipmap/baby_boy"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/born_pic"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5_dip"
                    android:text="小王子"
                    android:textColor="@color/app_main_deep"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen_5_dip"
                    android:text="@string/baby_boy_message"
                    android:textColor="@color/app_main_thin"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_10_dip"
                android:padding="@dimen/dimen_16_dip"
                android:scaleType="centerCrop"
                android:src="@mipmap/jiantou"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
