<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/toolbar_noright" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_74_dip"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:paddingRight="@dimen/dimen_16_dip">
        <TextView
            android:text="@string/mb_card_add_hint1"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/mb_card_add_hint2"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#b1b1b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1_dip"
        android:background="@color/mengbao_index_split_line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dimen_22_dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_20_dip"
            android:paddingRight="@dimen/dimen_20_dip"
            android:paddingBottom="@dimen/dimen_22_dip">
            <EditText
                android:id="@+id/edit1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:maxLength="4"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_26_dip"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10_dip"
                android:paddingRight="@dimen/dimen_10_dip"
                android:background="@drawable/bg_rounded_mb_edit"
                android:layout_height="@dimen/dimen_56_dip" />
            <ImageView
                android:layout_marginLeft="@dimen/dimen_13_dip"
                android:layout_marginRight="@dimen/dimen_13_dip"
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#999999"/>
            <EditText
                android:id="@+id/edit2"
                android:maxLines="1"
                android:layout_width="0dip"
                android:textSize="@dimen/dimen_26_dip"
                android:layout_weight="1"
                android:textColor="#666666"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10_dip"
                android:paddingRight="@dimen/dimen_10_dip"
                android:maxLength="4"
                android:background="@drawable/bg_rounded_mb_edit"
                android:layout_height="@dimen/dimen_56_dip" />
            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_marginLeft="@dimen/dimen_13_dip"
                android:layout_marginRight="@dimen/dimen_13_dip"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#999999"/>
            <EditText
                android:id="@+id/edit3"
                android:maxLines="1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_26_dip"
                android:maxLength="4"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10_dip"
                android:paddingRight="@dimen/dimen_10_dip"
                android:background="@drawable/bg_rounded_mb_edit"
                android:layout_height="@dimen/dimen_56_dip" />
            <ImageView
                android:layout_width="@dimen/dimen_24_dip"
                android:layout_height="@dimen/dimen_1_dip"
                android:background="#999999"
                android:layout_marginLeft="@dimen/dimen_13_dip"
                android:layout_marginRight="@dimen/dimen_13_dip"/>
            <EditText
                android:id="@+id/edit4"
                android:maxLines="1"
                android:layout_width="0dip"
                android:textColor="#666666"
                android:textSize="@dimen/dimen_26_dip"
                android:layout_weight="1"
                android:maxLength="4"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10_dip"
                android:paddingRight="@dimen/dimen_10_dip"
                android:background="@drawable/bg_rounded_mb_edit"
                android:layout_height="@dimen/dimen_56_dip" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="@color/mengbao_index_split_line_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimen_14_dip"
        android:paddingRight="@dimen/dimen_14_dip"
        android:layout_marginBottom="@dimen/dimen_10_dip"
        android:layout_height="@dimen/dimen_60_dip">
        <Button
            android:id="@+id/mb_card_bind"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:textSize="@dimen/dimen_34_dip"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_mbcard"
            android:text="@string/mb_card_add"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>