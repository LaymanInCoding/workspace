<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card:cardCornerRadius="2dp"
    card:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/home_page_item_horizontal_padding">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/home_page_list_item_photo_size"
            android:layout_height="@dimen/home_page_list_item_photo_size"
            android:layout_marginRight="@dimen/home_page_item_horizontal_padding"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_03"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/photo"
            android:text="Title"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/photo"
            android:text="作者"
            android:textColor="@color/master_friendship_circle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/photo"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/praise_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_heart_grey"
                android:drawablePadding="2dp"
                android:text="68"/>

            <TextView
                android:id="@+id/comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:drawableLeft="@mipmap/icon_message_tip"
                android:drawablePadding="2dp"
                android:text="68"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_clock_grey"
                android:drawablePadding="2dp"
                android:text="2015.03.25 12:36"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
