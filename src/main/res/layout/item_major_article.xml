<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f3f3f3"
    android:paddingBottom="@dimen/dimen_10_dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dimen_30_dip"
        android:paddingLeft="@dimen/dimen_22_dip"
        android:paddingRight="@dimen/dimen_22_dip"
        android:paddingBottom="@dimen/dimen_22_dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/major_article_title"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen_28_dip"
                android:ellipsize="end"
                android:layout_marginRight="@dimen/dimen_150_dip"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/major_article_type"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dimen_30_dip"
                android:paddingTop="@dimen/dimen_5_dip"
                android:paddingBottom="@dimen/dimen_5_dip"
                android:paddingRight="@dimen/dimen_30_dip"
                android:background="@drawable/bg_book_short"
                android:textSize="@dimen/dimen_24_dip"
                android:textColor="#ea5151"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/major_article_abstract"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:lineSpacingExtra="@dimen/dimen_6_dip"
            android:textSize="@dimen/dimen_24_dip"
            android:textColor="#888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/img_container"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/major_article_img0"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:id="@+id/major_article_img1"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:id="@+id/major_article_img2"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/major_article_author"
            android:gravity="right"
            android:textColor="#888888"
            android:textSize="@dimen/dimen_24_dip"
            android:layout_marginTop="@dimen/dimen_22_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:background="#cccccc"
        android:layout_height="@dimen/dimen_1_dip" />
</LinearLayout>