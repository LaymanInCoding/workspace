<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#e8e7e6"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_20_dip"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_20_dip">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/share_weixin_friend"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dimen_105_dip"
                android:layout_height="@dimen/dimen_105_dip"
                android:src="@mipmap/weixin"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mbq_circle_title"
                android:textSize="@dimen/dimen_20_dip"
                android:text="微信好友"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share_weixin_circle"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dimen_105_dip"
                android:layout_height="@dimen/dimen_105_dip"
                android:src="@mipmap/pengyq"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="@color/mbq_circle_title"
                android:text="朋友圈"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/share_qq"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dimen_105_dip"
                android:layout_height="@dimen/dimen_105_dip"
                android:src="@mipmap/qq"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="@color/mbq_circle_title"
                android:text="QQ"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/share_qqkj"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dimen_105_dip"
                android:layout_height="@dimen/dimen_105_dip"
                android:src="@mipmap/qqkj"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="@color/mbq_circle_title"
                android:text="QQ空间"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/mbq_horizontal_divider_full_share" />
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_20_dip"
        android:weightSum="4"
        android:paddingTop="@dimen/dimen_20_dip"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/collect_article"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/collect_img"
                android:layout_width="@dimen/dimen_100_dip"
                android:layout_height="@dimen/dimen_100_dip"
                android:src="@mipmap/shouc"/>
            <TextView
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mbq_circle_title"
                android:textSize="@dimen/dimen_20_dip"
                android:text="收藏文章"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:layout_height="@dimen/dimen_80_dip">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="@color/mbq_circle_title"
            android:text="取消"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>