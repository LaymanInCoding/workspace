<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:background="@color/white"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/content_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic_market_placeholder" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/content_img"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/user_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:drawableLeft="@mipmap/focus_on_n"
                android:drawablePadding="4dp"
                android:text="89"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/user_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_6"
                android:drawableLeft="@mipmap/no_comments"
                android:drawablePadding="4dp"
                android:textColor="@color/grey"
                android:text="89"
                android:textSize="@dimen/text_size_11"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/user_praise"
                android:layout_toEndOf="@+id/user_praise"
                android:layout_marginStart="@dimen/space_6" />

            <TextView
                android:id="@+id/user_data"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/data_1"
                android:drawablePadding="4dp"
                android:textColor="@color/grey"
                android:layout_marginRight="@dimen/space_5"
                android:text="89"
                android:textSize="@dimen/text_size_11"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
