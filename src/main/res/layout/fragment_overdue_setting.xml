<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:paddingLeft="@dimen/dimen_20_dip"
            android:paddingRight="@dimen/dimen_20_dip"
            android:background="#f4f4f4"
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_80_dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:text="您的预产期"
                android:textColor="#717173"
                android:layout_alignParentLeft="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="#717173"
                android:id="@+id/due_date"
                android:text="2017-01-18"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_30_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/overdue_jsq"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:src="@mipmap/jsj" />
            <TextView
                android:textColor="#717173"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/dimen_10_dip"
                android:text="预产期计算器"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/overdue_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_30_dip"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:paddingLeft="@dimen/dimen_20_dip"
                android:paddingRight="@dimen/dimen_20_dip"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_60_dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="末次月经时间"
                    android:textColor="#717173"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:id="@+id/last_menstruation_time"
                    android:textSize="14sp"
                    android:textColor="#717173"
                    android:text="2017-01-18"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_30_dip"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:id="@+id/menstruation_cycle"
                android:paddingLeft="@dimen/dimen_20_dip"
                android:paddingRight="@dimen/dimen_20_dip"
                android:layout_height="@dimen/dimen_60_dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:text="月经周期天数"
                    android:textColor="#717173"
                    android:layout_alignParentLeft="true" />
                <TextView
                    android:id="@+id/menstruation_cycle_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textColor="#717173"
                    android:text="28"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen_30_dip"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:paddingLeft="@dimen/dimen_20_dip"
                android:paddingRight="@dimen/dimen_13_dip"
                android:gravity="right|center_vertical"
                android:id="@+id/cal_overdue"
                android:layout_height="@dimen/dimen_60_dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#717173"
                    android:text="@string/overdue_help" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#D66464"
                    android:text="？" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:gravity="center">
            <Button
                android:layout_width="160dip"
                android:layout_height="40dip"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/save_status"
                android:textStyle="bold"
                android:background="@drawable/babycenter_button_bg"
                android:text="保    存"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:id="@+id/menstruation_cycle_container"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#D66263"/>
        <TextView
            android:id="@+id/menstruation_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:paddingTop="@dimen/dimen_20_dip"
            android:gravity="right|center"
            android:textColor="#D66263"
            android:paddingRight="@dimen/dimen_20_dip"
            android:textSize="@dimen/dimen_30_dip"/>
        <com.witmoon.xmb.ui.WheelView
            android:id="@+id/numberPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include
        layout="@layout/emptylayout_all" />
</RelativeLayout>