<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/bg_nav"
        fresco:contentInsetEnd="0dp"
        fresco:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height">
                <ImageView
                    android:id="@+id/toolbar_left_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_item_pressed"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:src="@mipmap/icon_arrow_back"/>
                <info.hoang8f.android.segmented.SegmentedGroup
                    android:layout_centerInParent="true"
                    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/segmented1"
                    android:paddingRight="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    segmentedgroup:sc_border_width="1dp"
                    segmentedgroup:sc_tint_color="@color/white"
                    segmentedgroup:sc_checked_text_color="#D66263"
                    segmentedgroup:sc_corner_radius="5dp">

                    <RadioButton
                        android:id="@+id/mabao_gongxiang_btn"
                        android:background="#D66263"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingLeft="@dimen/dimen_20_dip"
                        android:paddingRight="@dimen/dimen_20_dip"
                        android:paddingTop="@dimen/dimen_6_dip"
                        android:paddingBottom="@dimen/dimen_6_dip"
                        android:button="@null"
                        android:text="@string/mabao_gongxiang_card" />
                    <RadioButton
                        android:id="@+id/welfare_btn"
                        android:background="#D66263"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:paddingLeft="@dimen/dimen_20_dip"
                        android:paddingRight="@dimen/dimen_20_dip"
                        android:paddingTop="@dimen/dimen_6_dip"
                        android:paddingBottom="@dimen/dimen_6_dip"
                        android:text="@string/welfare_card"
                        android:button="@null" />
                </info.hoang8f.android.segmented.SegmentedGroup>

                <TextView
                    android:text="@string/card_use_help"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/card_use_help"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_50_dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                     />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>