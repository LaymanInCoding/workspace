<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_180_dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_180_dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remove_button"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@color/master_me"
            android:text="@string/text_delete"
            android:textColor="@color/app_main_deep"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/add_favorite_button"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_10_dip"
            android:paddingRight="@dimen/dimen_10_dip"
            android:layout_height="match_parent"
            android:background="@color/master_me"
            android:text="@string/text_add_to_favorite"
            android:textColor="@color/app_main_deep"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>