<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:padding="@dimen/dimen_24_dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.witmoon.xmb.ui.widget.CircleImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dimen_120_dip"
            android:layout_height="@dimen/dimen_120_dip"
            android:src="@mipmap/ic_launcher"
            app:border_color="@color/circle_image_border"
            app:border_width="1dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/space_10"
            android:gravity="left|top"
            android:lines="4"
            android:hint="请写下对宝贝的感受，对他人的帮助很大哦。"
            android:padding="@dimen/dimen_6_dip"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18_dip"
        android:gravity="center_vertical">
    </LinearLayout>
    <com.witmoon.xmb.ui.MyGridView
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="@color/white"
        android:listSelector="@color/list_item_background_normal"
        android:columnWidth="@dimen/space_1"
        android:verticalSpacing="@dimen/space_2"
        android:gravity="center"
        android:numColumns="4"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RatingBar
            android:id="@+id/rating"
            style="@style/mRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="false"
            android:layout_alignParentRight="true"
            android:numStars="5"
            android:stepSize="0.5"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_rounded_green_border"
        android:paddingBottom="@dimen/dimen_12_dip"
        android:paddingLeft="@dimen/dimen_60_dip"
        android:paddingRight="@dimen/dimen_60_dip"
        android:paddingTop="@dimen/dimen_12_dip"
        android:layout_marginTop="@dimen/dimen_15_dip"
        android:text="提交评价"
        android:textColor="#ff48beab"/>
</LinearLayout>