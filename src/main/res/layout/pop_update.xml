<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#72000000"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@drawable/common_radius_relativelayout"
        android:layout_width="@dimen/dimen_510_dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingBottom="@dimen/dimen_34_dip"
        android:layout_marginLeft="@dimen/dimen_120_dip"
        android:layout_marginRight="@dimen/dimen_120_dip">

        <RelativeLayout
            android:background="@mipmap/update_window1"
            android:layout_width="@dimen/dimen_510_dip"
            android:layout_height="@dimen/dimen_190_dip">

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_34_dip"
                android:gravity="center_horizontal"
                android:text="@string/update_found"
                android:textSize="@dimen/dimen_36_dip" />

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_90_dip"
                android:text="@string/latest_version"
                android:textSize="@dimen/dimen_20_dip" />

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/latest_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_marginLeft="@dimen/dimen_5_dip"
                android:layout_toRightOf="@+id/textView2"
                android:textSize="@dimen/dimen_20_dip"
                tools:text="1.1" />

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_122_dip"
                android:text="@string/new_version_size"
                android:textSize="@dimen/dimen_20_dip" />

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/new_version_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_marginLeft="@dimen/dimen_5_dip"
                android:layout_toRightOf="@+id/textView3"
                android:textSize="@dimen/dimen_20_dip"
                tools:text="1.1" />
        </RelativeLayout>


        <TextView
            android:id="@+id/update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_53_dip"
            android:layout_marginTop="@dimen/dimen_217_dip"
            android:text="@string/update_info" />

        <TextView
            android:id="@+id/version_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/update_info"
            android:layout_below="@id/update_info"
            android:layout_marginTop="@dimen/dimen_16_dip"
            android:lineSpacingExtra="@dimen/dimen_10_dip"
            android:layout_marginRight="@dimen/dimen_53_dip"
            tools:text="asdddddddddddsdddddddddddasdddddddddddsdddddddddddasdddddddddddsdddddddddddasdddddddddddsdddddddddddasdddddddddddsdddddddddddasdddddddddddsdddddddddddasdddddddddddsdddddddddddasdddddddddddsddddddddddd" />

        <LinearLayout
            android:layout_below="@+id/version_description"
            android:layout_width="@dimen/dimen_510_dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_53_dip">

            <TextView
                android:visibility="gone"
                android:id="@+id/refuse_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/refused_anyway"
                android:textSize="@dimen/dimen_30_dip" />

            <!--<include layout="@layout/line_vertical_gray" />-->

            <TextView
                android:id="@+id/update_right_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/refuse_update"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/get_rightnow"
                android:textColor="#ff7171"
                android:textSize="@dimen/dimen_30_dip" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>