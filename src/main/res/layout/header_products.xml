<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        style="@style/horizontal_divider"  />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_80_dip"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dimen_16_dip">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特色服务"
            android:textSize="@dimen/text_size_16"
            android:textColor="#606060"/>
        <TextView
            android:id="@+id/products_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务6"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:textSize="@dimen/text_size_12"
            android:textColor="#a9a9a9"/>
    </LinearLayout>
    <View
        style="@style/horizontal_divider"  />
    <LinearLayout
        android:id="@+id/product_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen_16_dip"
        android:paddingTop="@dimen/dimen_15_dip"
        android:paddingRight="@dimen/dimen_16_dip">
    </LinearLayout>
    <TextView
        android:id="@+id/product_no_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_28_dip"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dimen_28_dip"
        android:text="暂无更多服务"
        android:textColor="#D66263"
        android:textSize="@dimen/text_size_16"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/product_total_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_24_dip"
        android:paddingTop="@dimen/dimen_24_dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_total_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="#D66263"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:id="@+id/num_img"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/down_img"/>
    </LinearLayout>
    <View
        style="@style/horizontal_divider" />
</LinearLayout>