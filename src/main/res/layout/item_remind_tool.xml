<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:paddingTop="@dimen/dimen_30_dip">
        <ImageView
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_width="@dimen/dimen_55_dip"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:layout_height="@dimen/dimen_55_dip"
            android:id="@+id/tool_img"/>
        <TextView
            android:id="@+id/tool_remind_time"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/dimen_6_dip"
            android:paddingRight="@dimen/dimen_6_dip"
            android:paddingTop="@dimen/dimen_4_dip"
            android:paddingBottom="@dimen/dimen_4_dip"
            android:background="@drawable/bg_remind_time"
            android:layout_marginRight="@dimen/dimen_70_dip"
            android:textSize="@dimen/dimen_18_dip"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_105_dip"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:id="@+id/container_t"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tool_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_main_deep"
                android:textSize="@dimen/dimen_30_dip"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_main_thin"
                android:lineSpacingExtra="@dimen/dimen_3_dip"
                android:layout_marginTop="@dimen/dimen_6_dip"
                android:ellipsize="middle"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:id="@+id/tool_desc"
                android:textSize="@dimen/dimen_24_dip"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6_dip"
                android:id="@+id/tool_detail_container"
                android:visibility="gone"
                android:paddingRight="@dimen/dimen_40_dip"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_30_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/jiantou"/>
        <ImageView
            android:layout_below="@+id/container_t"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1_dip"
            android:background="@color/mengbao_index_split_line_color"/>
    </RelativeLayout>
</LinearLayout>

