<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_12_dip"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_10_dip">

        <TextView
            android:id="@+id/name_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="宅妈妈"
            android:textColor="@color/app_main_deep"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/rating_e"
            style="@android:style/Widget.Holo.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/name_e"/>

    </RelativeLayout>

    <TextView
        android:paddingLeft="@dimen/dimen_12_dip"
        android:paddingRight="@dimen/dimen_12_dip"
        android:id="@+id/content_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_6"
        android:layout_marginTop="@dimen/dimen_8_dip"
        android:text="Helo"
        android:textColor="@color/app_main_deep"
        android:textSize="12sp"/>

    <View
        style="@style/horizontal_divider"/>
</LinearLayout>